@{
    ViewData["Title"] = "Панель администратора";
}

<div class="container mt-4">
    <h1 class="mb-4">Панель администратора</h1>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h3 class="mb-0">Управление фильмами</h3>
                </div>
                <div class="card-body">
                    <p class="card-text">Добавление, редактирование и удаление фильмов в библиотеке.</p>
                    <a asp-controller="Movies" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-film"></i> Управление фильмами
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h3 class="mb-0">Управление пользователями</h3>
                </div>
                <div class="card-body">
                    <p class="card-text">Просмотр списка пользователей, управление ролями и блокировка аккаунтов.</p>
                    <a asp-controller="Admin" asp-action="ManageUsers" class="btn btn-primary">
                        <i class="bi bi-people"></i> Управление пользователями
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 