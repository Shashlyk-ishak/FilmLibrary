@model FilmLibrary.Models.Movie

@{
    ViewData["Title"] = "Удалить фильм";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">Delete Movie</h3>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <h4>Are you sure you want to delete this movie?</h4>
                </div>

                <div class="row">
                    @if (!string.IsNullOrEmpty(Model.CoverImagePath))
                    {
                        <div class="col-md-4">
                            <img src="@Model.CoverImagePath" alt="@Model.Title" class="img-fluid rounded" />
                        </div>
                    }
                    <div class="@(string.IsNullOrEmpty(Model.CoverImagePath) ? "col-md-12" : "col-md-8")">
                        <dl class="row">
                            <dt class="col-sm-3">Title</dt>
                            <dd class="col-sm-9">@Model.Title</dd>

                            <dt class="col-sm-3">Genre</dt>
                            <dd class="col-sm-9">@Model.Genre</dd>

                            <dt class="col-sm-3">Release Year</dt>
                            <dd class="col-sm-9">@Model.ReleaseYear</dd>

                            <dt class="col-sm-3">Created At</dt>
                            <dd class="col-sm-9">@Model.CreatedAt.ToString("g")</dd>

                            <dt class="col-sm-3">Created By</dt>
                            <dd class="col-sm-9">@(Model.Creator?.UserName ?? "Unknown")</dd>
                        </dl>
                    </div>
                </div>

                <div class="alert alert-danger mt-4">
                    <i class="fas fa-exclamation-triangle"></i>
                    This action cannot be undone. All associated data (ratings, actor/director relationships) will be permanently deleted.
                </div>

                <form asp-action="DeleteConfirmed" asp-route-id="@Model.MovieId" method="post" class="mt-4">
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i> Delete Movie
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 